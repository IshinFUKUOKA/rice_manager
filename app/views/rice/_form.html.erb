<div style="width: 20%; margin: 10px; padding: 8px;border: 4px solid #eeeec3;">
<h3>購入登録フォーム</h3>
<%= form_for(@rice) do |f| %>
  <div class="form-group">
    <label for="inputPurchased_at">購入日時</label><br/ >
    <%= f.datetime_select :purchased_at, use_month_numbers: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="inputBuyer">購入者</label><br />
    <%= f.select :buyer_id, @users.map{ |u| [u.name, u.id] } %>
  </div>
  <div class="form-group">
    <label for="inputName">米の名前(任意)</label><br />
    <%= f.text_field :name, placeholder: '名前(任意)', class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="inputPrice">値段</label><br />
    <%= f.number_field :name, placeholder: '値段', class: "form-control" %>
  </div>
    <%= f.submit '送信', class: 'btn btn-small btn-primary' %>
<% end %>
</div>
